Процедура СформироватьДвижения()

	СформироватьДвиженияОсновныеНачисленияИУдержания();
	
	СформироватьДвиженияВзаиморасчетыПоСотрудникам();
	
	РасчитатьОтпуск();
		
КонецПроцедуры

Процедура СформироватьДвиженияОсновныеНачисленияИУдержания()

	Движения.ВКМ_ОсновныеНачисления.Записывать = Истина;
	Движения.ВКМ_Удержания.Записывать = Истина;
	
	УстановитьПривилегированныйРежим(Истина);
	
	Оклад = ПланыВидовРасчета.ВКМ_ОсновныеНачисления.Оклад;
	Отпуск = ПланыВидовРасчета.ВКМ_ОсновныеНачисления.Отпуск;
	ПроцентОтРабот = ПланыВидовРасчета.ВКМ_ОсновныеНачисления.ПроцентОтРабот;
	БазовыйПериодНачало = ДобавитьМесяц(ТекущаяДата(), -12);
	БазовыйПериодКонец = ТекущаяДата();
	
	ДатаНачала = НачалоМесяца(ТекущаяДата());
	ДатаОкончания = КонецМесяца(ТекущаяДата()); 
	
	Запрос = Новый Запрос;
	Запрос.Текст = ТекстЗапроса_СформироватьДвиженияОсновныеНачисленияИУдержания();
	
	Граница = Новый Граница(ТекущаяДата(), ВидГраницы.Включая);
	
	Запрос.УстановитьПараметр("Период", Граница);
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	Запрос.УстановитьПараметр("НачалоПериода", ДатаНачала);
	Запрос.УстановитьПараметр("КонецПериода", ДатаОкончания);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		
		Если ТипЗнч(Выборка.ВидРасчета) = Тип("ПланВидовРасчетаСсылка.ВКМ_ОсновныеНачисления") Тогда
			
			Если Выборка.ВидРасчета = Оклад Тогда
			
				Движение = Движения.ВКМ_ОсновныеНачисления.Добавить();
				Движение.ПериодРегистрации = Дата;
				Движение.Регистратор = Ссылка;
				Движение.ПериодДействияНачало = ДатаНачала;
				Движение.ПериодДействияКонец = ДатаОкончания;
				Движение.Сторно = Ложь;
				Движение.ВидРасчета = Оклад;
				Движение.Сотрудник = Выборка.Сотрудник;
				Движение.Результат = ПрименитьНДФЛ(Выборка.Оклад);
				
			ИначеЕсли Выборка.ВидРасчета = Отпуск Тогда
				
				Движение = Движения.ВКМ_ОсновныеНачисления.Добавить();
				Движение.ПериодРегистрации = Дата;
				Движение.Регистратор = Ссылка;
				Движение.ПериодДействияНачало = Выборка.ОтпускДатаС;
				Движение.ПериодДействияКонец = Выборка.ОтпускДатаПо;
				Движение.БазовыйПериодНачало = БазовыйПериодНачало;
				Движение.БазовыйПериодКонец = БазовыйПериодКонец;
				Движение.Сторно = Ложь;
				Движение.ВидРасчета = Отпуск;
				Движение.Сотрудник = Выборка.Сотрудник;
				Движение.Результат = 0;
				
				
				Движения.ВКМ_ОтпускаСотрудников.Записывать = Истина;
				Движение = Движения.ВКМ_ОтпускаСотрудников.Добавить();
				Движение.Период = Дата;
				Движение.Сотрудник = Выборка.Сотрудник;
				Движение.КоличествоДнейОтпускаФакт = (Выборка.ОтпускДатаПо - Выборка.ОтпускДатаС) / 86400;
				
			ИначеЕсли Выборка.ВидРасчета = ПроцентОтРабот Тогда
				
				Движение = Движения.ВКМ_ОсновныеНачисления.Добавить();
				Движение.ПериодРегистрации = Дата;
				Движение.Регистратор = Ссылка;
				Движение.ПериодДействияНачало = ДатаНачала;
				Движение.ПериодДействияКонец = ДатаОкончания;
				Движение.Сторно = Ложь;
				Движение.ВидРасчета = ПроцентОтРабот;
				Движение.Сотрудник = Выборка.Сотрудник;
				Движение.Результат = ПрименитьНДФЛ(Выборка.СуммаКОплате);
				
			КонецЕсли;
			
		ИначеЕсли ТипЗнч(Выборка.ВидРасчета) = Тип("ПланВидовРасчетаСсылка.ВКМ_Удержания") Тогда
			
			Движение = Движения.ВКМ_Удержания.Добавить();
			Движение.ПериодРегистрации = Дата;
			Движение.Регистратор = Ссылка;
			Движение.Сторно = Ложь;
			Движение.ВидРасчета = Выборка.ВидРасчета;
			Движение.Сотрудник = Выборка.Сотрудник;
			Движение.Результат = Выборка.Размер;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Движения.ВКМ_ОсновныеНачисления.Записать();
	Движения.ВКМ_Удержания.Записать();
	Движения.ВКМ_ОтпускаСотрудников.Записать();
	
КонецПроцедуры

Процедура РасчитатьОтпуск()
	
	УстановитьПривилегированныйРежим(Истина);
	
	Отпуск = ПланыВидовРасчета.ВКМ_ОсновныеНачисления.Отпуск;
	КоличествоРабочихДней = ПолучитьКоличествоРабочихДней();
	
	Если КоличествоРабочихДней = Неопределено Тогда
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю("Данные по отпускам не могут быть расчитаны, заполните График работы!");
		Возврат;
	КонецЕсли;
		
	Запрос = Новый Запрос;
	Запрос.Текст = ТекстЗапроса_РасчитатьОтпуск();
		
	Измерения = Новый Массив;
	Измерения.Добавить("Сотрудник");
	
	Запрос.УстановитьПараметр("Измерения", Измерения);
	Запрос.УстановитьПараметр("Отпуск", Отпуск);
	Запрос.УстановитьПараметр("Ссылка", Ссылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
			
		КоличествоДнейОтпуска = Выборка.КоличествоДнейОтпуска;
		
		СуммаЗа12Месяцев = Выборка.СуммаЗа12Месяцев;
		
		Результат = (СуммаЗа12Месяцев/КоличествоРабочихДней)*КоличествоДнейОтпуска;
		
		Движение = Движения.ВКМ_ОсновныеНачисления[Выборка.НомерСтроки - 1];
		Движение.Результат = ПрименитьНДФЛ(Результат);
		
	КонецЦикла;
		
	Движения.ВКМ_ОсновныеНачисления.Записать(, Истина);
	
КонецПроцедуры

Процедура СформироватьДвиженияВзаиморасчетыПоСотрудникам()

	УстановитьПривилегированныйРежим(Истина);
	
	Движения.ВКМ_ВзаиморасчетыССотрудниками.Записывать = Истина;
	
	Запрос = Новый Запрос;
	Запрос.Текст = ТекстЗапроса_СформироватьДвиженияВзаиморасчетыПоСотрудникам();
	
	Запрос.УстановитьПараметр("Регистратор", Ссылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		
		Движение = Движения.ВКМ_ВзаиморасчетыССотрудниками.Добавить();
		Если ЗначениеЗаполнено(Выборка.ОсновноеНачисление) И ЗначениеЗаполнено(Выборка.Удержание) Тогда
			Сумма = Выборка.ОсновноеНачисление - Выборка.Удержание;
		ИначеЕсли ЗначениеЗаполнено(Выборка.ОсновноеНачисление) И НЕ ЗначениеЗаполнено(Выборка.Удержание) Тогда
			Сумма = Выборка.ОсновноеНачисление;
		ИначеЕсли НЕ ЗначениеЗаполнено(Выборка.ОсновноеНачисление) И ЗначениеЗаполнено(Выборка.Удержание) Тогда
			Сумма = - Выборка.Удержание;
		КонецЕсли;
		
		Если Сумма >= 0 Тогда
			Движение.ВидДвижения = ВидДвиженияНакопления.Приход;
		Иначе
			Движение.ВидДвижения = ВидДвиженияНакопления.Расход;
			Сумма = - Сумма; 
		КонецЕсли;
		
		Движение.Период = Дата;
		Движение.Сотрудник = Выборка.Сотрудник; 
		Движение.Сумма = Сумма;
		
	КонецЦикла;
	
КонецПроцедуры

Функция ПолучитьКоличествоРабочихДней()
	
	УстановитьПривилегированныйРежим(Истина);

	НачалоПериода = ДобавитьМесяц(ТекущаяДата(), -12);
	ОкончаниеПериода = ТекущаяДата();
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	КОЛИЧЕСТВО(ВКМ_ГрафикиРаботы.Значение) КАК Количество
		|ИЗ
		|	РегистрСведений.ВКМ_ГрафикиРаботы КАК ВКМ_ГрафикиРаботы
		|ГДЕ
		|	ВКМ_ГрафикиРаботы.Дата >= &НачалоПериода
		|	И ВКМ_ГрафикиРаботы.Дата <= &ОкончаниеПериода
		|	И ВКМ_ГрафикиРаботы.Значение <> 0";
	
	Запрос.УстановитьПараметр("НачалоПериода", НачалоПериода);
	Запрос.УстановитьПараметр("ОкончаниеПериода", ОкончаниеПериода);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Возврат Выборка.Количество;	
	КонецЦикла;
	
	Возврат Неопределено;
	
КонецФункции

Функция ПрименитьНДФЛ(Сумма)

	Вычет = Сумма * 13 / 100;
	Результат = Сумма - Вычет;
	Возврат Результат;
	
КонецФункции


